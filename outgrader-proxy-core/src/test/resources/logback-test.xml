<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="true">
	<appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
		<layout class="ch.qos.logback.classic.PatternLayout">
			<Pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</Pattern>
		</layout>
	</appender>
	
	<appender name="PERF_FILE" class="ch.qos.logback.core.FileAppender">
		<File>logs/outgrader-performance.log</File>
		<encoder>
			<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
		</encoder>
	</appender>
	
	<appender name="AGGREGATED_PERF_LOGS" class="org.perf4j.logback.AsyncCoalescingStatisticsAppender">
		<param name="TimeSlice" value="30000" />
		<appender-ref ref="PERF_FILE" />
	</appender>

	<logger name="com.outgrader" level="trace" additivity="false">
		<appender-ref ref="CONSOLE" />
	</logger>
	
	<logger name="org.perf4j.TimingLogger" additivity="false" level="info">
		<appender-ref ref="AGGREGATED_PERF_LOGS" />
	</logger>

	<root level="debug">
		<appender-ref ref="CONSOLE"/>
	</root>
</configuration>