<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<appender name="FILE" class="ch.qos.logback.core.FileAppender">
		<File>${outgrader.home}/logs/outgrader-proxy.log</File>
		<encoder>
			<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
		</encoder>
	</appender>
	
	<appender name="PERF_FILE" class="ch.qos.logback.core.FileAppender">
		<File>${outgrader.home}/logs/outgrader-performance.log</File>
		<encoder>
			<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
		</encoder>
	</appender>
	
	<appender name="AGGREGATED_PERF_LOGS" class="org.perf4j.logback.AsyncCoalescingStatisticsAppender">
		<param name="TimeSlice" value="300000" />
		<appender-ref ref="PERF_FILE" />
	</appender>

	<logger name="org.perf4j.TimingLogger" additivity="false" level="info">
		<appender-ref ref="AGGREGATED_PERF_LOGS" />
	</logger>

	<root level="info">
		<appender-ref ref="FILE"/>
	</root>
</configuration>